<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="List" option="com_melo">
		<message>List</message>
	</layout>


	<!-- Add fields to the parameters object for the layout. -->
<fields name="params">
	<fieldset name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">
			<field name="linktype" type="radio" default="redir" label="Link Type" description="link type, redir has hit tracking">
				<option value="normal">Normal</option>
				<option value="redir">Redirect</option>
			</field>
			<field name="linktarget" type="radio" default="current" label="Link Target" description="Open link in a new or same window">
				<option value="current">Current Window</option>
				<option value="new">New Window</option>
			</field>
			<field name="numcols" default="5" type="text" label="# Columns" description="Number of Columns to show" class="inputbox" />

			
	</fieldset>
</fields>
</metadata>
